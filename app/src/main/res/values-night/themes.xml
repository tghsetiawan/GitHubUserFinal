<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUserFinal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">@font/manrope3_regular</item>
    </style>

    <style name="TextContent.Title">
        <item name="fontFamily">@font/manrope3_regular</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="TextContent.TitleDetails">
        <item name="fontFamily">@font/manrope3_regular</item>
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="TextContent.SubtitleDetails">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DetailUserBackgroud">
        <item name="background">@color/colorLightBlack</item>
    </style>

    <style name="DetailUserIcon">
        <item name="tint">@color/white</item>
    </style>

    <style name="DetailUserTab">
        <item name="tabTextColor">@color/white</item>
        <item name="tabBackground">@color/colorPrimaryDark</item>
    </style>
</resources>